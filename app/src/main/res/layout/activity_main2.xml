<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/enable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="enable"
        android:textSize="20sp" />
<FrameLayout
    android:id="@+id/demoll"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:id="@+id/demo"
        android:text="demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
    </FrameLayout>
    <com.example.apple.myapplication.customeview.LocationLayout
        android:layout_below="@id/enable"
        android:layout_above="@id/demoll"
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:clipChildren="false"
        android:clipToPadding="false"></com.example.apple.myapplication.customeview.LocationLayout>
</RelativeLayout>